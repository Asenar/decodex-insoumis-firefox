{
  "manifest_version": 2,
  "name": "Possedex",
  "version": "{VERSION}",
  "description": "Avec le Possedex, apprenez en un clin d'oeil qui se trouve derrière le média que vous êtes en train de lire !",
  "applications": {
      "gecko": {
          "id": "possedex@possedex.info"
      }
  },
  "background": {
    "scripts": ["background.js", "content.js", "install.js"]
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png"
  },
  "browser_action" :
  {
    "default_icon" : "icon-64.png",
    "default_title" : "Possedex",
    "default_popup": "popup.html"
  },
    "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions" : [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "webRequest",

    "http://possedex.info/mdiplo.json"
  ]
}
