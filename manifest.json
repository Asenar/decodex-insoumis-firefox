{
  "manifest_version": 2,
  "name": "Possedex",
  "version": "0.1.0",
  "description": "Avec le Possedex, apprenez en un clin d'oeil qui se trouve derrière le média que vous êtes en train de lire !",
  "applications": {
      "gecko": {
          "id": "possedex@possedex.info"
      }
  },
  "background": {
    "scripts": ["background.js", "possedex.js", "content.js", "install.js"],
    "persistent": false
  },
  "homepage_url": "https://possedex.info/",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png"
  },
  "browser_action" :
  {
    "default_icon" : "icon-64.png",
    "default_title" : "Possedex",
    "default_popup": "popup/popup.html"
  },
    "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions" : [
    "tabs",
    "storage",
    "notifications",
    "activeTab",

    "https://possedex.info/mdiplo.json"
  ],
    "web_accessible_resources": [
      "css/content.css",
    "fonts/*",
        "*.ttf",
        "*.gif",
        "img/prop/*"
  ]
}
